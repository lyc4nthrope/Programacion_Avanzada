# ================================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================================
server.port=8080

# ================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ================================================
spring.datasource.url=jdbc:mariadb://localhost:3306/accommodation_db
spring.datasource.username=root
spring.datasource.password=CAMBIAR_AQUI_PASSWORD_DE_MARIADB
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver

# ================================================
# CONFIGURACIÓN DE JPA/HIBERNATE
# ================================================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MariaDBDialect

# ================================================
# CONFIGURACIÓN DE JWT
# ⚠️ IMPORTANTE: La clave debe tener al menos 32 caracteres (256 bits)
# Genera una clave segura en: https://generate-secret.vercel.app/32
# O usa: openssl rand -base64 32
# ================================================
jwt.secret=CAMBIAR_AQUI_CLAVE_DE_AL_MENOS_32_CARACTERES

# ================================================
# CONFIGURACIÓN DE CLOUDINARY
# Obtén tus credenciales en: https://cloudinary.com/console
# ================================================
cloudinary.cloud-name=CAMBIAR_AQUI_CLOUD_NAME
cloudinary.api-key=CAMBIAR_AQUI_API_KEY
cloudinary.api-secret=CAMBIAR_AQUI_API_SECRET
cloudinary.folder=accommodation_photos

# ================================================
# CONFIGURACIÓN DE EMAIL (Simple Java Mail)
# Genera App Password en: https://myaccount.google.com/apppasswords
# ⚠️ NO uses tu contraseña normal de Gmail
# ================================================
mail.host=smtp.gmail.com
mail.port=587
mail.username=CAMBIAR_AQUI_TU_EMAIL@gmail.com
mail.password=CAMBIAR_AQUI_APP_PASSWORD_DE_GMAIL

# ================================================
# CONFIGURACIÓN DE SPRINGDOC (Swagger)
# ================================================
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html